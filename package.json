{
  "name": "php-acl-access",
  "scripts": {
    "test": "eslint resources/javascript/ --ext .ts",
    "fix": "eslint resources/javascript/ --ext .ts --fix",
    "fa": "cp node_modules/@fortawesome/fontawesome-free/webfonts/*.* public/webfonts/",
    "watch:style": "npm run fa && sass --no-source-map --watch resources/sass:public",
    "build:style": "npm run fa && sass --no-source-map --style=compressed resources/sass:public",
    "watch:admin": "parcel watch --out-dir=public/ resources/javascript/admin/*.ts --no-hmr",
    "build:admin": "parcel build --out-dir=public/ resources/javascript/admin/*.ts --no-source-maps"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.3",
    "typescript": "^3.8.3"
  }
}
