<div class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" id="modal-permission-resource">
    <div class="modal-dialog" role="document">
        <form class="modal-content" autocomplete="off">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-key"></i>
                    Access for role "<span></span>"
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-sm table-bordered table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Role</th>
                            <th class="text-center text-success"><i class="fas fa-check"></i></th>
                            <th class="text-center text-danger"><i class="fas fa-times"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for resource in resources %}
                        <tr>
                            <td>{{ resource.name }}</td>
                            <td class="text-center">
                                <input type="radio" name="resource[{{ resource.id }}]" value="1">
                            </td>
                            <td class="text-center">
                                <input type="radio" name="resource[{{ resource.id }}]" value="0" checked>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btn-update">
                    <i class="fas fa-save"></i>
                    Save
                </button>
            </div>
        </form>
    </div>
</div>