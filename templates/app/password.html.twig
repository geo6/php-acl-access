{% extends '@layout/default.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('/password.css') }}">
{% endblock %}

{% block title %}Account recovery{% endblock%}

{% block content %}
<div class="row justify-content-md-center mt-5">
    <div class="col-5">
        <h1>{{ 'Account recovery' | trans }}</h1>

        <p>
            {{ 'If you have forgotten your password, you can regain access to your account using our account recovery tool.' | trans }}
        </p>

        {% if error is defined and error == true %}
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle"></i>
            {{ 'This email address is not registered in our system.' | trans }}
        </div>
        {% endif %}

        <div class="border border-secondary rounded p-3">

            <form method="post" action="{{ path('password') }}" autocomplete="off">
                <div class="form-group">
                    <label class="control-label" for="inputEmail">{{ 'Your email address' | trans }}</label>
                    <input class="form-control" id="inputEmail" name="email" required="required" type="email">
                    <small class="form-text text-muted">
                        {{ 'If your email address is registered in our system we will send you an email to reset your password.' | trans }}
                    </small>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary" name="action" value="login">
                        {{ 'Next' | trans }}
                        <i class="fas fa-hand-point-right"></i>
                    </button>
                </div>
            </form>

        </div>

        {% include '@includes/footer.html.twig' %}
    </div>
</div>
{% endblock %}
